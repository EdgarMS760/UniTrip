<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorHint">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SpinnerItemStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/text_primary</item> <!-- Selected item text color -->
        <item name="android:dropDownSelector">@color/text_primary</item> <!-- Dropdown selector color -->
        <item name="android:popupBackground">@color/white</item> <!-- Popup background color -->
        <item name="android:dropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>

    <style name="SpinnerDropDownItemStyle">
        <item name="android:textColor">@color/text_primary</item> <!-- Text color for each dropdown item -->
    </style>

    <style name="RoundedCornersShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">64dp</item>
    </style>

    <style name="RoundedCornersShapeAppearanceChat" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ButtonCancel" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>